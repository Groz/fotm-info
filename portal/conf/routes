# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Health check
GET        /healthcheck                      controllers.Application.healthCheck

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)

# Home page
GET        /                                 controllers.Application.playingNowDefault
GET        /:region                          controllers.Application.playingNowRegion(region: String)
GET        /:region/:bracket                 controllers.Application.playingNow30(region: String, bracket: String)
GET        /:region/:bracket/:minutes        controllers.Application.playingNow(region: String, bracket: String, minutes: Int)
